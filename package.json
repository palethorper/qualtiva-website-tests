{
    "name": "qualtiva-solutions-tests",
    "version": "1.0.0",
    "description": "Playwright tests for Qualtiva Solutions website",
    "scripts": {
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
        "test:desktop": "playwright test --project='chromium' --project='firefox' --project='webkit'",
        "test:all-browsers": "playwright test --project='chromium' --project='firefox' --project='webkit' --project='Mobile Chrome' --project='Mobile Safari' --project='iPad' --project='Edge'",
        "test:performance": "playwright test performance.spec.js",
        "test:accessibility": "playwright test accessibility.spec.js",
        "test:best-practices": "playwright test web-build-best-practices.spec.js",
        "test:cross-browser": "playwright test cross-browser-compatibility.spec.js",
        "test:mobile-responsive": "playwright test mobile-responsiveness.spec.js",
        "test:ci": "playwright test --reporter=html,junit,json",
        "report": "playwright show-report",
        "install-browsers": "playwright install",
        "codegen": "playwright codegen https://dev.analytiqa.cloud"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.1",
        "@types/node": "^20.19.9"
    },
    "main": "playwright.config.js",
    "directories": {
        "test": "tests"
    },
    "keywords": [
        "playwright",
        "testing",
        "automation",
        "cross-browser",
        "mobile",
        "accessibility",
        "performance"
    ],
    "author": "",
    "license": "ISC",
    "type": "commonjs"
}
